{
  "name": "lumigrid-sveltekit",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node build",
    "lint:copy": "node scripts/lint-copy.mjs",
    "check": "svelte-kit sync && npm run lint:copy && svelte-check --fail-on-warnings",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:unit": "vitest run --passWithNoTests"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@playwright/test": "^1.50.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.3.3",
    "typescript": "^5.9.3",
    "vite": "^6.3.0",
    "vitest": "^2.1.5"
  }
}
